<turbo-frame id="bottom_form">
    <div class="content">
        <%= render "devise/shared/error_messages", resource: resource %>
        <h2>REGISTER</h2>

        <%= form_with(model: @user, url: user_registration_path, class: "login_form", data: { turbo: false }) do |f| %>
          <div class="form_group">
              <%= f.label :name＊, "", class: "form_label" %>
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form_input" %>
          </div>

          <div class="form_group">
              <%= f.label :nickname＊, "", class: "form_label" %>
              <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "form_input" %>
          </div>

          <div class="form_group">
              <%= f.label :profile_picture, "", class: "form_label" %>
              <%= f.file_field :profile_pic, autofocus: true, autocomplete:"profile_pic", class: "form_input"%>
          </div>

          <div class="form_group">
            <%= f.label :favorite_color, "", class: "form_label" %>
            <%= f.select :color_id, options_for_select(Color.all.map { |color| [color.name, color.id, { style: "background-color: #{color.name};" }] }), { prompt: "Select a color" }, { class: "color-box" } %>
          </div>

          <div class="form_group">
              <%= f.label :email＊, "", class: "form_label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form_input" %>
          </div>

          <div class="form_group">
              <%= f.label :password＊, "", class: "form_label" %>
              <%= f.password_field :password, id:"password", class: "form_input", placeholder:"" %>
          </div>

          <div class="form_group_btn">
              <%= f.submit "Register", class: "btn" %>
          </div>
        <% end %>
    </div>
</turbo-frame>

