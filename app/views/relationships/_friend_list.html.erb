<div id="friend_list">
    <ul class="friend-list">
        <% current_user.matchers.each do |friend| %>
        <li class="friend_item">
            <% if friend.profile_pic.attached? %>
                <%= image_tag friend.profile_pic, class: "friend_img" %>
              <% else %>
                <%= image_tag "sample1.png", class: "friend_img" %>
            <% end %>
            <%= friend.nickname %>
            <%= link_to relationship_path(friend), data: { turbo_method: :delete, turbo_confirm: "Are you sure? Do you want to delete this data?" }, class: "friend_remove_link" do %>Ã—<% end %>
        </li>
        <% end %>
    </ul>
</div>
