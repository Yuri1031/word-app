<div class="search-results-container">
  <h2>検索結果</h2>

  <% if @users.present? %>
    <div class="user-results">
      <h3>ユーザー</h3>
      <ul>
        <% @users.each do |user| %>
          <li class="user-card">
            <%= image_tag user.profile_pic, alt: user.name, class: "avatar" if user.profile_pic.attached? %>
            <p><%= user.nickname || user.name %></p>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if @words.present? %>
    <div class="word-results">
      <h3>単語</h3>
      <ul>
        <% @words.each do |word| %>
          <li class="word-card">
            <h4><%= word.title %></h4>
            <p><%= word.question.truncate(60) %></p>
            <%= link_to "詳細を見る", word_path(word), class: "word-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if @users.blank? && @words.blank? %>
    <p class="no-results">該当するデータが見つかりませんでした。</p>
  <% end %>
</div>
