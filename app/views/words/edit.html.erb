<turbo-frame id="main_content">
  <div class="main_header">
    <%= render "bases/main_header" %>
  </div>

  <div class="main_bottom_word">
    <div class="main_card"> 
      <%= form_with(model: [@category, @word], method: :patch, data: { turbo_frame: "main_content" }) do |f| %>
        <div class="word_card_top">
          <div class="word_title">
            <%= f.text_field :title, class: "form_input" %>
          </div>
        </div>

        <div class="word_q">
          <%= f.text_area :question, class: "form_textarea" %>
        </div>

        <div class="word_a">
          <%= f.text_area :answer, class: "form_textarea" %>
        </div>

        <div class="form_edit">
          <%= f.submit "更新する", class: "edit_submit_button" %>
        </div>
      <% end %>
    </div>
    
  </div>  

  <div class="main_foot"></div>
</turbo-frame>
