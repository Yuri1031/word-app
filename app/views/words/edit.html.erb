

  <div class="main_bottom_word">
    <div class="main_card"> 
      <%= form_with(model: [@category, @word], method: :patch, data: { turbo_frame: "main_content" }) do |f| %>
        <div class="word_card_top">
          <div class="word_title">
            <%= f.text_field :title, class: "form_input" %>
          </div>
        </div>

        <div data-controller="tinymce">
          <div class="word_q">
            <%= f.text_area :question, data: { tinymce_target: "editor" }, placeholder:"Question", class: ["form_textarea", "tinymce"] %>
          </div>
        </div>

        <div data-controller="tinymce">
          <div class="word_a">
            <%= f.text_area :answer, data: { tinymce_target: "editor" }, placeholder:"Answer", class: ["form_textarea", "tinymce"] %>
          </div>
        </div>

        <%= tinymce %>

        <div class="form_edit">
          <%= f.submit "更新する", class: "edit_submit_button" %>
        </div>
      <% end %>
    </div>
    
  </div>  

  <div class="main_foot"></div>

