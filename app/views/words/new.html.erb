  <div class="back_button_area_word">
    <%= link_to "←", categories_path, class: "back_button" %>
  </div>  

  <div class="main_bottom_word">
    <div class="main_card"> 
      <%= form_with(model: @word, url: category_words_path(@category), data: { turbo_frame: "main_content" }, multipart: true ) do |f| %>
              <div class="word_card_top">
                <div class="word_title">
                  <%= f.text_field :title, class: "form_input", placeholder:"Title" %>
                </div>
              </div>

              <div class="word_qt">
                <%= f.text_area :question, placeholder:"Question", class: "form_textarea" %>
              </div>

              <div class="word_at">
                <%= f.text_area :answer, placeholder:"Answer", class: "form_textarea" %>
              </div>

              <div class="form_edit">
                <%= f.submit "作成", class: "edit_submit_button" %>
              </div>
      <% end %>
    </div>
    
  </div>  

